<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart Page</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="flex flex-row justify-between">
        <h2 class="text-blue-400 font-bold text-2xl">SHOP</h2>
        <% if(success.length > 0) { %>
            <div id="success" class="text-green-500"><%= success %></div>
        <% } %>
        <% if(error.length > 0) { %>
            <div id="error" class="text-red-500"><%= error %></div>
        <% } %>
        <a class="mt-3 text-blue-400 hover:underline text-sm" href="/dashboard">Back to Dashboard</a>
    </div>
    <div class="cartProducts ml-10 grid grid-cols-1 gap-10 mb-10 mt-[3rem]">
        <% if(cartProducts.length>0){ %>
            <% cartProducts.reverse().forEach((product)=>{ %>
                <div class="w-[100rem] h-[16rem] border-2 border-blue-300 rounded-lg flex flex-row gap-10">
                    <div class="p-3">
                        <img class="w-[12rem] h-[14rem] bg-blue-500 hover:shadow-lg hover:scale-105 transition-transform duration-200 rounded-lg" src="<%= product.images[0] %>">
                    </div>
                    <div class="p-3 flex flex-col gap-4 mt-2">
                        <div class="flex flex-row gap-[55rem]">
                            <div class="flex flex-row gap-3">
                                <label class="w-[8rem]" for="Product Name">Product Name:</label>
                                <p class="w-[16rem] text-2xl font-semibold"><%= product.name %></p>
                            </div>
                            <div>
                                <button class="w-10 bg-red-500 hover:bg-red-600 text-white px-2 rounded-md">
                                    <a href="/dashboard/cart/delete/<%= product._id %>">x</a>
                                </button>
                            </div>
                        </div>
                        <div class="flex flex-row gap-3">
                            <label class="w-[8rem]" for="Product Price">Product Price:</label>
                            <p class="text-xl font-semibold"><%= product.price %></p>
                        </div>
                        <div class="flex flex-row gap-3">
                            <label class="w-[8rem]" for="Product Discount">Product Discount:</label>
                            <p class="text-xl font-semibold"><%= product.discount %></p>
                        </div>
                        <div class="flex flex-row gap-3">
                            <label class="w-[8rem]" for="Quantity">Quantity:</label>
                            <div>
                                <button class="bg-blue-500 text-white px-2 rounded-md">
                                    <a href="/dashboard/cart/minus/<%= product._id %>">-</a>
                                </button>
                                <span class="px-4 font-semibold"><%= product.quantity %></span>
                                <button class="bg-blue-500 text-white px-2 rounded-md">
                                    <a href="/dashboard/cart/plus/<%= product._id %>">+</a>
                                </button>
                            </div>
                        </div>
                        <div class="flex flex-row gap-3">
                            <label class="w-[8rem]" for="Total Price">Total Price:</label>
                            <p class="text-xl font-semibold"><%= product.totalPrice %>/-</p>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-3xl">No products in your cart.</p>
        <% } %>
    </div>
    <div>
        <h2 class="text-2xl font-bold ml-10">Total Amount: <span class="text-green-500"><%= totalCheckoutPrice %>/-</span></h2>
        <% if(cartProducts.length>0){ %>
            <div class="mt-5 ml-10">
                <button class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md">
                    <a href="/dashboard/checkout">Proceed to Checkout</a>
                </button>
            </div>
        <% } %>
    </div>
    <script src="/javascripts/flashScript.js"></script>
</body>
</html>